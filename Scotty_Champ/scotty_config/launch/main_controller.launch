<launch>
    <arg name="use_sim_time" default="true" />
    <!-- <arg name="robot_description" default="$(find scotty_description)/urdf/scotty_robot.urdf" />
    <arg name="robot_name" default="scotty_robot" /> -->

    <!-- Arguments -->
    <arg name="world_file" default="$(find scotty_config)/worlds/default.world"/>
    <arg name="robot_name" default="scotty_robot" />
    <arg name="urdf_file" default="$(find scotty_description)/urdf/scotty.urdf" />
    <arg name="x" default="0" />
    <arg name="y" default="0" />
    <arg name="z" default="0.3" />
    <arg name="roll" default="0" />
    <arg name="pitch" default="0" />
    <arg name="yaw" default="0" />

    <!-- Spawn Gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_file)" />
    </include>

    <!-- Spawn Robot -->
    <!-- <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model $(arg robot_name)" /> -->
  
  <!-- Spawn Robot -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model $(arg robot_name) -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)" output="screen" />

    <!-- Load Robot Description -->
    <param name="robot_description" command="$(find xacro)/xacro $(arg urdf_file)" />

    <!-- Main Python Controller -->
    <node name="scotty_main_controller" pkg="scotty_config" type="main_controller.py" output="screen" />
</launch>